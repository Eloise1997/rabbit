@model FProjectCampingBackend.Models.EFModels.Member

@{
    ViewBag.Title = "Edit";
}



<div class="container text-center">
    <div class="editarea">
        <h2>編輯會員權限</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="mb-3">
                    <img src="/files/@Html.DisplayFor(model => model.Photo)" alt=" model.Account" class="img-fluid memberPhoto" />
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Account, htmlAttributes: new { @class = "control-label" })
                    
                    @Html.DisplayFor(model => model.Account, new { htmlAttributes = new { @class = "form-control" } })

                </div>



                <div class="mb-3">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                
                        @Html.DisplayFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                  
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                  
                        @Html.DisplayFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.PhoneNum, htmlAttributes: new { @class = "control-label col-md-2" })
                   
                        @Html.DisplayFor(model => model.PhoneNum, new { htmlAttributes = new { @class = "form-control" } })
                       
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Birthday, htmlAttributes: new { @class = "control-label col-md-2" })
                   
                        @Html.DisplayFor(model => model.Birthday, new { htmlAttributes = new { @class = "form-control" } })
                 
                  
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Enabled, htmlAttributes: new { @class = "" })
                   
                        <div class="checkbox">
                            @Html.EditorFor(model => model.Enabled)
                            @Html.ValidationMessageFor(model => model.Enabled, "", new { @class = "text-danger" })
                        </div>
                    
                </div>



                <div class="mb-3">
                    @Html.LabelFor(model => model.CreatedTime, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.CreatedTime, new { htmlAttributes = new { @class = "form-control" } })
                       
                    </div>
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.IsConfirmed, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.DisplayFor(model => model.IsConfirmed)
                          
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.ConfirmCode, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.ConfirmCode, new { htmlAttributes = new { @class = "form-control" } })
                      
                    </div>
                </div>

                <div class="mb-3">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@section css{
    <style>
        .memberPhoto {
            max-width: 150px;
            border-radius: 50%;
        }
        .editarea{
         
        }
    </style>


}